<% if product = Product.find_by(id: item.product_id) %>

  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= number_to_currency(product.price) %>
    </td>
    <td>
      <%= item.quantity %>
    </td>
    <td>
      <%= number_to_currency(item.total_price) %>
    </td>
  </tr>
<% end %>